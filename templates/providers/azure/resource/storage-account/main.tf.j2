# Módulo para criar um Azure Storage Account chamado {{ resource_name }}

# Um resource group é geralmente necessário
resource "azurerm_resource_group" "rg_{{ resource_name }}" {
  name     = "rg-{{ resource_name | lower | replace("_", "") }}-{{ location_short }}"
  location = var.location
}

resource "azurerm_storage_account" "sa_{{ resource_name }}" {
  name                     = "st{{ resource_name | lower | replace("_", "") | truncate(18) }}${random_string.suffix.result}"
  resource_group_name      = azurerm_resource_group.rg_{{ resource_name }}.name
  location                 = azurerm_resource_group.rg_{{ resource_name }}.location
  account_tier             = "Standard"
  account_replication_type = "LRS"

  tags = var.tags
}

resource "random_string" "suffix" {
  length  = 4
  special = false
  upper   = false
}
