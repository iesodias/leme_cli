FROM ubuntu:22.04

# Evitar prompts interativos
ENV DEBIAN_FRONTEND=noninteractive

# Instalar dependências básicas do sistema
RUN apt-get update && apt-get install -y \
    python3 \
    python3-pip \
    curl \
    wget \
    unzip \
    sudo \
    gpg \
    lsb-release \
    software-properties-common \
    ca-certificates \
    apt-transport-https \
    && rm -rf /var/lib/apt/lists/*

# Instalar dependências Python
RUN pip3 install rich typer jinja2

# Criar diretório de trabalho
WORKDIR /app

# Copiar código fonte
COPY . /app/

# Tornar o script de instalação executável
RUN chmod +x /app/quick-install.sh

# Definir o comando padrão para ajuda
CMD ["python3", "/app/main.py", "--help"]